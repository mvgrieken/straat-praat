#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged for staged files
echo "📝 Running lint-staged..."
npx lint-staged

# Run type checking
echo "🔧 Running TypeScript check..."
npm run typecheck

# Run tests
echo "🧪 Running tests..."
npm run test:ci

echo "✅ Pre-commit checks passed!"
